@model Book

<h2>Chi tiết sách</h2>
<p><strong>Tựa sách:</strong> @Model.Title</p>
<p><strong>Tác giả:</strong> @Model.Author</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Giá:</strong> @Model.Price</p>
@if (!string.IsNullOrEmpty(Model.Image))
{
    <img src="@Model.Image" alt="@Model.Title" width="200" />
}
<a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Trở về</a>